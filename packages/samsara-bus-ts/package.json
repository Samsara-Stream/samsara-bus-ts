{
  "name": "samsara-bus-ts",
  "version": "1.0.0",
  "description": "RxJS-based multi-topics message/event bus for TypeScript",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "check-examples": "tsc --project tsconfig.examples.json --noEmit",
    "run-examples": "npm run run-basic-example && npm run run-request-response-example",
    "run-basic-example": "npx ts-node examples/samsara-bus-example.ts",
    "run-request-response-example": "npx ts-node examples/request-response-example.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "message-bus",
    "event-bus",
    "rxjs",
    "typescript",
    "reactive",
    "publish-subscribe",
    "messaging"
  ],
  "dependencies": {
    "rxjs": "^7.8.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^24.2.0",
    "@types/uuid": "^9.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Samsara-Stream/samsara-bus-ts.git",
    "directory": "packages/samsara-bus-ts"
  },
  "author": "Samsara Stream",
  "license": "MIT"
}
