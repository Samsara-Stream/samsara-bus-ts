{
  "name": "samsara-bus-ts",
  "version": "1.0.0",
  "description": "TypeScript/RxJS-based multi-topics message/event bus ecosystem",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "lint": "eslint packages/*/src/**/*.ts",
    "format": "prettier --write packages/*/src/**/*.ts",
    "clean": "npm run clean --workspaces",
    "dev": "npm run dev --workspaces --if-present"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.19.9",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Samsara-Stream/samsara-bus-ts.git"
  },
  "author": "Samsara Stream",
  "license": "MIT"
}
